@model IEnumerable<ToDoList.Core.DataModels.ToDoTask>
@{
ViewData["Title"] = "Tasks";
}

<h2>Tasks</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Task</a>
</p>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Due Date</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.DueDate?.ToString("d")</td>
                    <td>@task.Priority</td>
                    <td>@task.Status</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-primary btn-sm"><i class="fas fa-info-circle"></i></a>
                        <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>