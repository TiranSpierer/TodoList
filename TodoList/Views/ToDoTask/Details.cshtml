@model ToDoList.Core.DataModels.ToDoTask
@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4 shadow-sm">
            <h5 class="card-title mb-4">Task Details</h5>
            <dl class="row mb-0">
                <dt class="col-sm-3 mb-2">Title</dt>
                <dd class="col-sm-9 mb-2">@Model.Title</dd>
                <dt class="col-sm-3 mb-2">Description</dt>
                <dd class="col-sm-9 mb-2">@Model.Description</dd>
                <dt class="col-sm-3 mb-2">Due Date</dt>
                <dd class="col-sm-9 mb-2">@Model.DueDate?.ToString("d")</dd>
                <dt class="col-sm-3 mb-2">Priority</dt>
                <dd class="col-sm-9 mb-2">@Model.Priority</dd>
                <dt class="col-sm-3 mb-2">Status</dt>
                <dd class="col-sm-9 mb-2">@Model.Status</dd>
            </dl>
            <div class="mt-4">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
