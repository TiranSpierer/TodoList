@model ToDoList.Core.DataModels.ToDoTask
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4 shadow-sm">
            <h5 class="card-title mb-4">Delete Task</h5>
            <div class="mb-3">
                <h6 class="card-subtitle mb-2 text-muted">Are you sure you want to delete this task?</h6>
            </div>
            <div class="mb-4">
                <h6 class="card-subtitle mb-2">Task Details</h6>
                <hr />
                <dl class="row mb-0">
                    <dt class="col-sm-3 mb-2">Title</dt>
                    <dd class="col-sm-9 mb-2">@Model.Title</dd>
                    <dt class="col-sm-3 mb-2">Description</dt>
                    <dd class="col-sm-9 mb-2">@Model.Description</dd>
                    <dt class="col-sm-3 mb-2">Due Date</dt>
                    <dd class="col-sm-9 mb-2">@Model.DueDate?.ToString("d")</dd>
                    <dt class="col-sm-3 mb-2">Priority</dt>
                    <dd class="col-sm-9 mb-2">@Model.Priority</dd>
                    <dt class="col-sm-3 mb-2">Status</dt>
                    <dd class="col-sm-9 mb-2">@Model.Status</dd>
                </dl>
            </div>
            <form asp-action="Delete" class="mb-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger me-2">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
